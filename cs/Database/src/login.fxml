<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loginController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f5f5;">
         <children>
            <Label text="Enter Your Student ID" textFill="#0044ff">
               <font>
                  <Font name="Arial" size="17.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="studentIDText" prefHeight="25.0" prefWidth="105.0" />
                  <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" text="Submit" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" textFill="RED" />
         </children>
      </VBox>
   </children>
</AnchorPane>
